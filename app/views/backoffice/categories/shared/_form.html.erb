<h1 class="page-header"><%= @category.model_name.human(count: 2) %></h1>

<% if @category.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <% @category.errors.full_messages.each do |message| %>
      <ul>
        <li><%= action_message %></li>
      </ul>
      <% end %>
  </div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= action %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <%= form_for ([:backoffice, @category])  do |f| %>
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, class: 'form-control', placeholder: 'Ex: Animais/Pet' %>
        </div>
        <button type="submit" class="btn btn-default"><%= t('buttons.save') %></button>
      </div>
    <% end %>
  </div>
  <!-- /.panel-body -->
</div>
